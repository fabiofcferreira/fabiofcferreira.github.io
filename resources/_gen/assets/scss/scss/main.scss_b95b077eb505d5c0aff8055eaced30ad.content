html,body{font-display:swap;font-family:roboto,sans-serif;margin:0}:root{--primary: var(--teal);--secondary: var(--orange);--primarybg: var(--darkgrey);--on-primarybg: var(--textlight);--teal: #14e5ea;--darkgrey: #363636;--orange: #f98701;--textdark: #101010;--textlight: #cccccc}body.dark{background-color:var(--primarybg);color:var(--on-primarybg)}body.dark nav{background-color:var(--primarybg)}body.dark nav ul.links a{color:var(--on-primarybg)}body.dark nav ul.links ali::after{background-color:var(--teal)}nav{position:fixed;top:0;z-index:10;width:100%;height:5rem;transition:box-shadow .2s ease-in-out}nav.active{box-shadow:0 2px 7px 2px var(--teal)}nav .nav-wrapper{width:60rem;max-width:90%;height:100%;display:flex;align-items:center;margin:0 auto}nav a.brand{font-size:2rem;font-weight:900;color:var(--textlight);text-decoration:none;transition:color .2s ease;letter-spacing:.7px}nav a.brand:hover{color:var(--teal)}nav ul.links{display:flex;list-style:none;padding:0;margin-left:auto}nav ul.links a{width:fit-content;font-weight:500;font-size:1.2rem;text-decoration:none;text-transform:lowercase;margin:0 1rem}nav ul.links a.active li::after{width:100%}nav ul.links a#fire li::after{background-color:var(--orange)}nav ul.links a li::after{content:"";height:.25rem;width:0;display:block;position:relative;bottom:0;left:50%;transform:translateX(-50%);background-color:var(--teal);transition:width .2s ease-in-out,color .2s ease}nav ul.links a:hover{margin-bottom:0}nav ul.links a:hover li::after{width:100%}header .header-background{width:100%;max-height:35rem;object-fit:cover}main{margin-top:5rem}main #page-content{width:60rem;max-width:90%;margin-right:auto;margin-left:auto}#project-list{justify-content:space-between;padding:0;list-style:none}#project-list li{flex-basis:20%}#project-list li>a{color:var(--on-primarybg);text-decoration:none}#project-list li>a #thumbnail{margin-bottom:.5rem}#project-list li>a #title{color:var(--orange);margin:0 0 .25rem}#project-list li>a #date{font-size:.75rem;color:#999;margin:0}