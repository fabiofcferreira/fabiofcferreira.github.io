html,body{font-display:swap;font-family:roboto,sans-serif;margin:0}:root{--primary: var(--teal);--secondary: var(--orange);--primarybg: var(--darkgrey);--on-primarybg: var(--textlight);--teal: #14e5ea;--darkgrey: #363636;--orange: #f98701;--textdark: #101010;--textlight: #cccccc}body.dark{background-color:var(--primarybg);color:var(--on-primarybg)}body.dark nav{background-color:var(--primarybg)}body.dark nav ul.links a{color:var(--on-primarybg)}body.dark nav ul.links ali::after{background-color:var(--teal)}nav{position:fixed;top:0;z-index:10;width:100%;height:5rem;transition:box-shadow .2s ease-in-out}nav.active{box-shadow:0 2px 7px 2px var(--teal)}nav .nav-wrapper{width:60rem;max-width:90%;height:100%;display:flex;align-items:center;margin:0 auto}nav a.brand{font-size:2rem;font-weight:900;color:var(--textlight);text-decoration:none;transition:color .2s ease;letter-spacing:.7px}nav a.brand:hover{color:var(--teal)}nav ul.links{display:flex;list-style:none;padding:0;margin-left:auto}nav ul.links a{width:fit-content;font-weight:500;font-size:1.2rem;text-decoration:none;text-transform:lowercase;margin:0 1rem}nav ul.links a.active li::after{width:100%}nav ul.links a#fire li::after{background-color:var(--orange)}nav ul.links a li::after{content:"";height:.25rem;width:0;display:block;position:relative;bottom:0;left:50%;transform:translateX(-50%);background-color:var(--teal);transition:width .2s ease-in-out,color .2s ease}nav ul.links a:hover{margin-bottom:0}nav ul.links a:hover li::after{width:100%}header .header-background{width:100%;max-height:35rem;object-fit:cover}main{margin-top:5rem}main #page-content{width:60rem;max-width:90%;margin-right:auto;margin-bottom:6rem;margin-left:auto}#project-list{display:grid;grid-template-columns:repeat(4,1fr);grid-gap:1rem 2rem;padding:0;list-style:none}#project-list li{flex-basis:20%}#project-list li>a{color:var(--on-primarybg);text-decoration:none}#project-list li>a #thumbnail{margin-bottom:.5rem;transition:filter .5s ease-in-out,transform .2s ease-in-out}#project-list li>a #title{font-size:1.125rem;color:var(--orange);margin:0 0 .25rem}#project-list li>a #date{font-size:.75rem;color:#999;margin:0}#project-list li:hover #thumbnail{transform:scale(1.05)}#hire #how-i-work{margin-top:2rem}#hire #how-i-work p{margin:.5rem 0}#hire #calltoaction a{position:relative;width:fit-content;font-size:1.25rem;color:var(--orange);text-decoration:none;text-transform:none;margin-top:2.5rem;transition:color .25s ease}#hire #calltoaction a:hover::before{content:"Email me :)";display:block;position:absolute;z-index:10;bottom:125%;left:50%;width:7.5rem;background-color:#000;color:var(--textlight);font-size:.9rem;text-align:center;padding:.5rem;border-radius:2rem;transform:translateX(-50%);transition:all .5s ease}#hire #calltoaction a:hover::after{content:"";display:block;position:absolute;z-index:9;bottom:calc(125% - 0.25rem);left:50%;width:.5rem;height:.5rem;background-color:#000;transform:translateX(-50%)rotate(45deg)}button.animated{position:relative;min-width:10rem;height:3rem;font-size:1.25rem;color:var(--on-primarybg);background:0 0;padding:0 .5rem;border:.25rem solid var(--orange);box-shadow:none;outline:none;transition:color .25s ease;cursor:pointer}button.animated::before{content:"";position:absolute;top:-.25rem;left:-.25rem;z-index:-1;display:block;width:calc(100% + 0.5rem);height:0;background-color:var(--orange);transition:height .4s ease}button.animated:hover{color:var(--darkgrey)}button.animated:hover::before{height:3rem}