html,body{font-display:swap;font-family:roboto,sans-serif;margin:0}:root{--primary: var(--teal);--secondary: var(--orange);--primarybg: var(--darkgrey);--on-primarybg: var(--textlight);--teal: #14e5ea;--darkgrey: #545454;--orange: #f98701;--textdark: #101010;--textlight: #ccc}body.dark{background-color:var(--primarybg);color:var(--on-primarybg)}body.dark nav ul.links a{color:var(--on-primarybg)}body.dark nav ul.links a::after{background-color:var(--teal)}nav{position:fixed;top:0;width:100%;height:5rem}nav.active{box-shadow:rgba(255,255,255,.9)2px 0 2px}nav .nav-wrapper{width:50rem;max-width:85%;height:100%;display:flex;align-items:center;margin:0 auto}nav a.brand{font-size:2rem;font-weight:800;color:var(--textlight);text-decoration:none;transition:color .2s ease}nav a.brand:hover{color:var(--teal)}nav ul.links{display:flex;width:30%;list-style:none;padding:0;margin-left:auto}nav ul.links a{width:fit-content;font-weight:500;font-size:1.2rem;text-decoration:none;margin:0 1rem}nav ul.links a::after{content:"";height:.25rem;width:0;display:block;position:relative;bottom:0;left:50%;transform:translateX(-50%);background-color:var(--teal);transition:width .2s ease-in-out,color .2s ease}nav ul.links a:hover{margin-bottom:0}nav ul.links a:hover::after{width:100%}body #content{margin-top:5rem}