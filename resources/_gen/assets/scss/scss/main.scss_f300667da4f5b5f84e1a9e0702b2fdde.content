html,
body {
  font-family: "Roboto", sans-serif; }

:root {
  --primary: var(--teal);
  --secondary: var(--orange);
  --primarybg: var(--darkgrey);
  --on-primarybg: var(--textlight);
  --teal: #14e5ea;
  --darkgrey: #545454;
  --orange: #f98701;
  --textdark: #101010;
  --textlight: #ccc; }

body.dark {
  background-color: var(--primarybg);
  color: var(--on-primarybg); }
